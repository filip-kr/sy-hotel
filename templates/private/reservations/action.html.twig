{% extends 'base.html.twig' %}

{% block content %}
  <div class="m-2">
    <div class="container w-50 p-3">
      {{ form_start(form) }}
      <div class="mb-3">
        {% include 'form/input.html.twig' with { attribute: form.guest } %}
      </div>
      <div class="mb-3">
        {% include 'form/input.html.twig' with { attribute: form.sign_in_date } %}
      </div>
      <div class="mb-3">
        {% include 'form/input.html.twig' with { attribute: form.sign_out_date } %}
      </div>
      <div class="mb-5">
        <p class="lead mb-5">Svi podaci su obavezni</p>
        <input type="submit" class="btn btn-success me-2" value="Potvrdi"/>
        <a href="{{path('reservations')}}" class="btn btn-danger">Odustani</a>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
